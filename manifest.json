{
  "manifest_version": 2,
  "name": "Bookmark Here",
  "version": "0.2",
  "description": "Allows bookmarking the current page from the bookmarks context menu.",
  "browser_specific_settings": {
    "gecko": {
      "id": "bookmark-here@pushittoprod.com"
    }
  },

  "permissions": ["menus", "contextMenus", "bookmarks", "tabs"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}